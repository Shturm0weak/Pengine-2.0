Basemat:
  Pipelines:
    - RenderPass: Deferred
      DepthTest: false
      DepthWrite: false
      CullMode: None
      PolygonMode: Fill
      TopologyMode: TriangleList
      Vertex: Shaders/Deferred.vert
      Fragment: Shaders/Deferred.frag
      DescriptorSets:
        - Type: Renderer
          RenderPass: DefaultReflection
          Set: 0
        - Type: Renderer
          RenderPass: Deferred
          Set: 1
      VertexInputBindingDescriptions:
        - Binding: 0
          InputRate: Vertex
          Names:
            - positionA
      ColorBlendStates:
        - BlendEnabled: false
        - BlendEnabled: true
          ColorBlendOp: max
          SrcColorBlendFactor: src color
          DstColorBlendFactor: dst color
      Uniforms:
        - Name: albedoTexture
          RenderTarget: "GBuffer[0]"
        - Name: normalTexture
          RenderTarget: "GBuffer[1]"
        - Name: shadingTexture
          RenderTarget: "GBuffer[2]"
        - Name: depthTexture
          RenderTarget: "GBuffer[4]"
        - Name: ssaoTexture
          RenderTarget: "SSAOBlur[0]"
        - Name: CSMTexture
          RenderTarget: "CSM[0]"
          RenderTargetDefault: "WhiteLayered"