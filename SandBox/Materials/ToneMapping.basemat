Basemat:
  Pipelines:
    - RenderPass: ToneMapping
      DepthTest: false
      DepthWrite: false
      CullMode: None
      PolygonMode: Fill
      TopologyMode: TriangleList
      Vertex: Shaders/ToneMapping.vert
      Fragment: Shaders/ToneMapping.frag
      DescriptorSets:
        - Type: Renderer
          RenderPass: ToneMapping
          Set: 0
      VertexInputBindingDescriptions:
        - Binding: 0
          InputRate: Vertex
          Tag: Position
          Names:
            - positionA
      ColorBlendStates:
        - BlendEnabled: false
      Uniforms:
        - Name: deferredTexture
          TextureAttachment: "Transparent[0]"
        - Name: shadingTexture
          TextureAttachment: "GBuffer[2]"
        - Name: rawSSRTexture
          TextureAttachment: "SSR"
          TextureAttachmentDefault: "Black"
        - Name: blurSSRTexture
          TextureAttachment: "SSRBlur"
          TextureAttachmentDefault: "Black"
        - Name: bloomTexture
          TextureAttachment: "BloomFrameBuffers(0)[0]"
          TextureAttachmentDefault: "Black"