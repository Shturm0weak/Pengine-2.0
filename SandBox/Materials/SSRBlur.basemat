Basemat:
  Pipelines:
    - RenderPass: SSRBlur
      Type: Compute
      Compute: Shaders/SSRBlur.comp
      DescriptorSets:
        - Type: Renderer
          RenderPass: SSRBlur
          Set: 0
      Uniforms:
        - Name: sourceTexture
          TextureAttachment: "SSR"
        - Name: normalTexture
          TextureAttachment: "GBuffer[1]"
        - Name: shadingTexture
          TextureAttachment: "GBuffer[2]"
        - Name: depthTexture
          TextureAttachment: "GBuffer[4]"