Basemat:
  Pipelines:
    - RenderPass: GBuffer
      DepthTest: true
      DepthWrite: true
      CullMode: Back
      PolygonMode: Fill
      TopologyMode: TriangleList
      Vertex: Shaders/OpaqueSkinned.vert
      Fragment: Shaders/Opaque.frag
      DescriptorSets:
        - Type: Renderer
          RenderPass: DefaultReflection
          Set: 0
        - Type: Material
          RenderPass: GBuffer
          Set: 1
        - Type: Object
          RenderPass: GBuffer
          Set: 2
      VertexInputBindingDescriptions:
        - Binding: 0
          InputRate: Vertex
          Tag: Position
          Names:
            - positionA
            - uvA
        - Binding: 1
          InputRate: Vertex
          Tag: Normal
          Names:
            - normalA
            - tangentA
        - Binding: 2
          InputRate: Vertex
          Tag: Color
          Names:
            - colorA
        - Binding: 3
          InputRate: Vertex
          Tag: Bones
          Names:
            - weightsA
            - boneIdsA
        - Binding: 4
          InputRate: Instance
          Names:
            - transformA
            - inverseTransformA
      ColorBlendStates:
        - BlendEnabled: false
        - BlendEnabled: false
        - BlendEnabled: false
        - BlendEnabled: false
    - RenderPass: Transparent
      DepthTest: true
      DepthWrite: true
      DepthClamp: true
      CullMode: Back
      PolygonMode: Fill
      Vertex: Shaders/TransparentSkinned.vert
      Fragment: Shaders/Transparent.frag
      DescriptorSets:
        - Type: Renderer
          RenderPass: DefaultReflection
          Set: 0
        - Type: Material
          RenderPass: GBuffer
          Set: 1
        - Type: Renderer
          RenderPass: Deferred
          Set: 2
        - Type: Renderer
          RenderPass: Lights
          Set: 3
        - Type: Object
          RenderPass: GBuffer
          Set: 4
      VertexInputBindingDescriptions:
        - Binding: 0
          InputRate: Vertex
          Tag: Position
          Names:
            - positionA
            - uvA
        - Binding: 1
          InputRate: Vertex
          Tag: Normal
          Names:
            - normalA
            - tangentA
        - Binding: 2
          InputRate: Vertex
          Tag: Color
          Names:
            - colorA
        - Binding: 3
          InputRate: Vertex
          Tag: Bones
          Names:
            - weightsA
            - boneIdsA
        - Binding: 4
          InputRate: Instance
          Names:
            - transformA
            - inverseTransformA
      ColorBlendStates:
        - BlendEnabled: true
        - BlendEnabled: false
        - BlendEnabled: false
        - BlendEnabled: true
    - RenderPass: CSM
      DepthTest: true
      DepthWrite: true
      DepthClamp: true
      DepthCompare: LessOrEqual
      CullMode: Front
      PolygonMode: Fill
      TopologyMode: TriangleList
      Vertex: Shaders/CSMSkinned.vert
      Geometry: Shaders/CSM.geom
      Fragment: Shaders/CSM.frag
      DescriptorSets:
        - Type: Renderer
          RenderPass: CSM
          Set: 0
        - Type: Material
          RenderPass: GBuffer
          Set: 1
        - Type: Object
          RenderPass: GBuffer
          Set: 2
      VertexInputBindingDescriptions:
        - Binding: 0
          InputRate: Vertex
          Tag: Position
          Names:
            - positionA
            - uvA
        - Binding: 1
          InputRate: Vertex
          Tag: Bones
          Names:
            - weightsA
            - boneIdsA
        - Binding: 2
          InputRate: Instance
          Names:
            - transformA
      ColorBlendStates:
        []
    - RenderPass: ZPrePass
      DepthTest: true
      DepthWrite: true
      CullMode: Back
      PolygonMode: Fill
      TopologyMode: TriangleList
      Vertex: Shaders/ZPrePassSkinned.vert
      Fragment: Shaders/ZPrePass.frag
      DescriptorSets:
        - Type: Renderer
          RenderPass: DefaultReflection
          Set: 0
        - Type: Material
          RenderPass: GBuffer
          Set: 1
        - Type: Object
          RenderPass: GBuffer
          Set: 2
      VertexInputBindingDescriptions:
        - Binding: 0
          InputRate: Vertex
          Tag: Position
          Names:
            - positionA
            - uvA
        - Binding: 1
          InputRate: Vertex
          Tag: Bones
          Names:
            - weightsA
            - boneIdsA
        - Binding: 2
          InputRate: Instance
          Names:
            - transformA
      ColorBlendStates:
        []